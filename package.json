{
  "name": "typescript-node-starter",
  "version": "0.0.0",
  "description": "A simple starter to use Typescript in Node applications",
  "main": "src/index.ts",
  "scripts": {
    "start": "rimraf dist && tsc && node dist/index.js",
    "dev": "nodemon --watch 'src/**' --ext 'ts,json' --exec 'ts-node src/index.ts'",
    "lint": "npx eslint src/ --ext .js,.jsx,.ts,.tsx",
    "test": "npx jest"
  },
  "author": "Anas Mammeri <anas.mammeri@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@types/express": "^4.17.11",
    "@types/jest": "^26.0.22",
    "@typescript-eslint/eslint-plugin": "^4.20.0",
    "@typescript-eslint/parser": "^4.20.0",
    "eslint": "^7.23.0",
    "jest": "^26.6.3",
    "nodemon": "^2.0.7",
    "rimraf": "^3.0.2",
    "ts-jest": "^26.5.4",
    "tslint": "^6.1.3",
    "typescript": "^4.2.3"
  }
}
